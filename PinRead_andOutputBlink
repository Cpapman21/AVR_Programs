#define F_CPU 1000000UL      // ATtiny45 internal 8 MHz oscillator
#include <avr/io.h>
#include <util/delay.h>
#include <xc.h>

int main(void)
{
    // Use PB0 (pin 5) as output
    
    DDRB = 0b00101111;
    
    while(1) {
        if(PINB & 0b00010000){
            PORTB ^= (1<<PB0);
            _delay_ms(500);
        }
        else
            PORTB = 0x00;
            _delay_ms(500);
    };
  
}
